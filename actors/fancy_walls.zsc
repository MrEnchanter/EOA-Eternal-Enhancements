// Test Actor
class FancyWallTestSound : Actor
{
	Default
	{
		-SOLID
		-NOCLIP
		+DONTSPLASH
		+NOTELEPORT
		+NOINTERACTION
		+MOVEWITHSECTOR
		radius 1;
		height 1;
		RenderStyle "None";
	}
	states
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 0 A_SetTics(random(1,8));
			TNT1 A 0
			{
				if (CountProximity ("FancyWallTestSound", 16, CPXF_NOZ))
				{
					return ResolveState("Null");
				} else {
					return ResolveState(null);
				}
			}
			TNT1 A 0 A_PlaySound("world/test", CHAN_BODY, 1.0, 1);
			APLS A -1;
			loop;
	}
}

